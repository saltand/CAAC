{
  "name": "@caac/monorepo",
  "version": "1.0.0",
  "description": "CAAC - Cross-Framework Cat Image Component Library",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "test": "pnpm -r run test",
    "test:vue": "pnpm --filter @caac/vue run test",
    "test:react": "pnpm --filter @caac/react run test",
    "test:svelte": "pnpm --filter @caac/svelte run test",
    "test:e2e": "playwright test",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "preinstall": "npx only-allow pnpm",
    "storybook": "storybook dev -p 6006",
    "storybook:react": "storybook dev -p 6006",
    "storybook:vue": "cd packages/vue && storybook dev -p 6007",
    "storybook:svelte": "cd packages/svelte && storybook dev -p 6008",
    "build-storybook": "storybook build",
    "build-storybook:all": "pnpm run build-storybook && cd packages/vue && pnpm run build-storybook && cd ../svelte && pnpm run build-storybook"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-interactions": "^8.4.0",
    "@storybook/addon-links": "^8.4.0",
    "@storybook/blocks": "^8.4.0",
    "@storybook/builder-vite": "^9.1.1",
    "@storybook/react": "^8.4.0",
    "@storybook/react-vite": "^8.4.0",
    "@storybook/svelte": "^8.4.0",
    "@storybook/svelte-vite": "^8.4.0",
    "@storybook/test": "^8.4.0",
    "@storybook/vue3": "^8.4.0",
    "@storybook/vue3-vite": "^8.4.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "storybook": "^8.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}